<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    
    <Dialog 
        id="helloDialog"
        title="Hello {/recipient/name}"
    >

        <content>
            <core:Icon 
                src="sap-icon://hello-world"
                size="50px"
                class="sapUiMediumMargin"
            />
        </content>
        <beginButton>
            <Button 
                text="{i18n>dialogCloseBtn}"
                press=".onCloseDialog"
            />
        </beginButton>
    </Dialog>


</core:FragmentDefinition>